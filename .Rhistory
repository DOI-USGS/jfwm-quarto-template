FitFlextableToPage <- function(ft, pgwidth = 6){
# set as autofit to make width parameters adjustable
ft_out <- ft %>% autofit()
# set width as function of page width
ft_out <- width(ft_out,
width = dim(ft_out)$widths * pgwidth /
(flextable_dim(ft_out)$widths))
return(ft_out)
}
